<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label: 
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Type username"
            TextInput:
                id: password
                hint_text: "Type password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_wrong
                text: ""

        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "Sign Up fo a space journey!"
            TextInput:
                id: username
                hint_text: "Type username"
            TextInput:
                id: password
                hint_text: "Type password"
        GridLayout:
            cols: 2
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
            Button:
                text: "Cancel"
                on_press: root.cancel()

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up Successful!"
        Button:
            text: "Login Page"
            on_press: root.go_to_login_page()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "e.g. happy, sad, unloved"
        Button:
            text: "Enlighten Me"
            on_press: root.get_quote()
        Label:
            id: enlighten_me
            text: ""

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "signup_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"