<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label: 
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Type username"
                size_hint: 0.3, 0.5
            TextInput:
                id: password
                password: True
                hint_text: "Type password"
                size_hint: 0.3, 0.5
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: login_wrong
                text: ""

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.1
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Sign Up fo a space journey!"
            TextInput:
                id: username
                hint_text: "Type username"
                size_hint: 0.3, 0.5
            TextInput:
                id: password
                size_hint: 0.3, 0.5
                hint_text: "Type password"
            Label:
                id: status
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.1
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Submit"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
            Button:
                text: "Cancel"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.cancel()

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up Successful!"
            font_size: '35sp'
        Button:
            text: "Login Page"
            size_hint: 0.3, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            on_press: root.go_to_login_page()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'hover/logout_hover.png' if self.hovered else 'hover/logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8} 
        Label:
            text: "How do you feel?"
            text_size: self.width, None
            font_size: '35sp'
        TextInput:
            id: feeling
            hint_text: "e.g. happy, sad, unloved"
        Button:
            text: "Enlighten Me"
            size_hint: 0.3, 0.5
            on_press: root.get_quote()
        ScrollView:
            Label:
                id: enlighten_me
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "signup_screen"
    SignUpScreenSuccess:
        name: "signup_screen_success"
    LoginScreenSuccess:
        name: "login_screen_success"